<?xml version="1.0" encoding="utf-8"?>
<project name="mina" default="jar">
	<!-- install jdk,ant first:
		example: add this line in linux ~/.bash_profile:
		export PATH=$PATH:$HOME/apache-ant-1.9.4/bin
	-->
	<property name="root" value="."/>
	<property name="classes" value="${root}/classes"/>
	<property name="src" value="${root}/mina-core/src/main/java"/>
	<property name="lib" value="${root}/lib"/>
	<tstamp>
		<format property="time" pattern="yyyyMMdd"/>
	</tstamp>

	<target name="clean">
		<delete dir="${classes}"/>
	</target>

	<target name="compile">
		<mkdir dir="${classes}"/>
		<path id="classpath">
			<fileset dir="${lib}">
				<include name="*.jar"/>
			</fileset>
		</path>
		<javac destdir="${classes}" encoding="utf-8" classpathref="classpath" source="1.6" target="1.6" debug="true" debuglevel="lines,source" fork="true" memoryMaximumSize="512m" includeantruntime="false">
			<src path="${src}/"/>
		</javac>
	</target>

	<target name="jar" depends="clean, compile">
		<jar jarfile="mina-core-2.0-head-${time}.jar" basedir="${classes}" level="9"/>
		<jar jarfile="mina-core-2.0-head-${time}-src.jar" level="9">
			<fileset dir="${src}/"/>
		</jar>
	</target>
</project>
